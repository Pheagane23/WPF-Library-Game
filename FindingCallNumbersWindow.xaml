        mc:Ignorable="d"
        Title="FindingCallNumbersWindow" Height="450" Width="722">
    <Grid RenderTransformOrigin="0.497,0.492">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="165*"/>
